using System;

namespace DataObject.Sqlite.Helper.SqliteAttribute
{
    /// <summary>
    /// Sqlite基本属性クラス
    /// </summary>
    public abstract class SqliteAttribute : Attribute
    {
        /// <summary>
        /// プライマリキーフラグ
        /// </summary>
        public virtual bool IsPrimary { get; set; }

        /// <summary>
        /// NULL許可否
        /// </summary>
        public virtual bool NullAble { get; set; }

        /// <summary>
        /// 
        /// </summary>
        public virtual bool IsMapping { get; set; }

        /// <summary>
        /// コンストラクタ
        /// </summary>
        public SqliteAttribute()
        {
            this.IsPrimary = false;
            this.NullAble = false;
        }

    }
}
